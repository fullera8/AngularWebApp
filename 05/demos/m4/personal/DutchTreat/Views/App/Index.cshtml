@{
    ViewBag.Title = "Home Page";
}
    <div class="product-info">
        <img src="~/img/VanGogh.jpg" alt="Van Gogh" /> @*This is now modular so this page can be deployed anywhere. The ~/ tells MVC start from deployment location*@
        <h3>Dutch Mug</h3>
        <ul class="product-props">
            <li>Price: $9.99</li>
            <li>Artist: Van Gogh</li>
            <li>Title: </li>
            <li>Description: Self Portrait</li>
        </ul>
        <button id="buyButton">Buy</button>
    </div>
    <div id="formDiv">
        <form action="/" method="post">
            <label>Your Name: </label>
            <br />
            <input style="font-size: 18px; width: 200px;" />
            <br />
            <label>Email: </label>
            <br />
            <input type="email" />
            <br />
            <label>Subject: </label>
            <br />
            <input type="text" />
            <br />
            <label>Message: </label>
            <br />
            <textarea rows="4"></textarea>
            <br />
            <input type="submit" value="Send Message" />
        </form>
    </div>
    <div>
        <div id="loginToggle">Login</div>
        <form class="popup-form">
            <div>
                <label>Username:</label>
                <input />
            </div>
            <div>
                <label>Password:</label>
                <input type="password" />
            </div>
            <div>
                <input type="checkbox" />
                <label>Remember me?</label>
            </div>
            <div>
                <input type="submit" value="Login" />
            </div>
        </form>
    </div>